<%- include('templates/cabecera', {tituloWeb: 'Crear una nueva Mascota' }) %>

    <div class="flex-column justify-center align-center">
        <h1 class="block w-full border-2 border-gray-700 text-center text-[25px]">
            Crear
        </h1>
        <form action="/mascotas" method="POST" class="container flex justify-center w-full">
            <input type="text" name="nombre" placeholder="Agregar nombre"
                class="form-control my-2 border-2 border-gray-700 rounded">
            <input type="text" name="descripcion" placeholder="Agregar nombre"
                class="form-control my-2 border-2 border-gray-700 rounded">
            <div class="d-grid gap-2">
                <button type="submit"
                    class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Agregar</button>

            </div>
        </form>
    </div>

    <%- include('templates/footer') %>